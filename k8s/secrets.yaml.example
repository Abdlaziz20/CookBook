# Example secrets file - DO NOT COMMIT THIS WITH REAL VALUES
# Create actual secrets using:
# kubectl create secret generic cookbook-secrets \
#   --from-literal=jwt-secret='your-super-secret-jwt-key-here'

apiVersion: v1
kind: Secret
metadata:
  name: cookbook-secrets
type: Opaque
stringData:
  jwt-secret: "change-me-in-production"

---
# GitHub Container Registry secret
# Create using:
# kubectl create secret docker-registry ghcr-secret \
#   --docker-server=ghcr.io \
#   --docker-username=YOUR_GITHUB_USERNAME \
#   --docker-password=YOUR_GITHUB_TOKEN \
#   --docker-email=YOUR_EMAIL

apiVersion: v1
kind: Secret
metadata:
  name: ghcr-secret
type: kubernetes.io/dockerconfigjson
data:
  .dockerconfigjson: # Base64 encoded docker config

